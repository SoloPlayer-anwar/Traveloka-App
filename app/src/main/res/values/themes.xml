<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pullcode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/blue</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Pullcode.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/blue</item>
    </style>
    <style name="Textview">

    </style>



    <style name="Textview.editText">
        <item name="fontFamily">@font/poppins_medium</item>
        <item  name="android:textSize">15dp</item>
        <item name="android:textColor">@color/hint</item>
    </style>

    <style name="Textview.Poppins16dpTitle">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item  name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Textview.Poppins12dpSubtitle">
        <item name="fontFamily">@font/poppins</item>
        <item  name="android:textSize">12dp</item>
        <item name="android:textColor">@color/abu</item>
    </style>

    <style name="Textview.Poppins22dpTitle">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item  name="android:textSize">22dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Textview.Poppins13dpSubtitle">
        <item name="fontFamily">@font/poppins</item>
        <item  name="android:textSize">13dp</item>
        <item name="android:textColor">@color/abu</item>
    </style>

    <style name="Textview.Home">
        <item name="fontFamily">@font/poppins_medium</item>
        <item  name="android:textSize">15dp</item>
        <item name="android:textColor">@color/textSubtitle</item>
    </style>

    <style name="Textview.category">
        <item name="fontFamily">@font/poppins</item>
        <item  name="android:textSize">12dp</item>
        <item name="android:textColor">@color/textSubtitle</item>
    </style>

    <style name="Button">

    </style>

    <style name="Button.Primary">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">#020202</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/button_success</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_failure</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlNormal">#ECECEC</item>
        <item name="colorControlActivated">#FFC700</item>
    </style>

</resources>